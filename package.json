{
  "name": "ts-mock-firebase",
  "version": "1.1.4",
  "description": "Mock objects for Firebase",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf -f -r -d lib",
    "prebuild": "yarn clean",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --verbose --watch",
    "lint": "tslint --fix ./src/**/*.ts*",
    "semantic-release": "semantic-release",
    "predeploy": "yarn build",
    "deploy": "npm deploy",
    "commit": "npx git-cz",
    "check-package": "tar tvf $(npm pack)",
    "dir": "ls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mindhivefi/ts-mock-firebase.git"
  },
  "release": {
    "verifyConditions": "condition-circle",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  },
  "keywords": [
    "firebase",
    "mock",
    "test",
    "jest",
    "firestore",
    "auth",
    "notifications",
    "storage",
    "typescript",
    "javascript"
  ],
  "author": "Ville Venäläinen <ville@mindhive.fi> (https://www.mindhive.fi)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mindhivefi/ts-mock-firebase/issues"
  },
  "homepage": "https://github.com/mindhivefi/ts-mock-firebase#readme",
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@firebase/app-types": "0.3.5",
    "@firebase/firestore": "1.0.6",
    "@firebase/firestore-types": "1.0.3",
    "@firebase/util": "0.2.9",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/npm": "5.1.4",
    "@types/jest": "24.0.11",
    "@types/uuid": "3.4.4",
    "commitizen": "3.0.7",
    "condition-circle": "2.0.2",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.3",
    "ts-jest": "24.0.0",
    "tslint": "5.14.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-sonarts": "1.9.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "uuid": "3.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "precommit": "yarn lint && yarn test && yarn clean"
    }
  },
  "files": [
    "lib/**/*"
  ]
}
